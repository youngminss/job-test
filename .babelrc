{
  "presets": [
    "@babel/preset-env",
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ],
    "@babel/preset-typescript",
    "@emotion/babel-preset-css-prop"
  ],
  "plugins": [
    "@emotion",
    [
      "module-resolver",
      {
        "root": ["."],
        "extensions": [".ts", ".tsx", ".js", ".jsx"],
        "alias": {
          "@src": "./src",
          "@components": "./src/components",
          "@pages": "./src/pages"
        }
      }
    ]
  ]
}
